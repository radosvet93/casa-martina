---
import { PHONE } from "../constants/index.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact us - Casa Martina">
  <main>
    <section
      class="mx-auto max-w-screen-xl px-4 py-32 sm:px-6 lg:flex lg:items-center lg:px-24 flex justify-center flex-col"
    >
      <h1 class="text-3xl font-extrabold sm:text-5xl mb-8">Contact us</h1>
      <p>To book reservation call us on: {PHONE}</p>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d158857.83988631278!2d-0.2664023549384796!3d51.52873980514821!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47d8a00baf21de75%3A0x52963a5addd52a99!2sLondon!5e0!3m2!1sen!2suk!4v1708044000569!5m2!1sen!2suk"
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </section>
  </main>
</Layout>
