---
import { PHONE } from "../constants/index.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact us - Casa Martina">
  <main>
    <section
      class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:flex lg:items-center lg:px-24 flex justify-center flex-col"
    >
      <h1 class="text-3xl font-extrabold sm:text-5xl mb-8">Contact us</h1>
      <p class="mb-6">To book reservation call us on: {PHONE}</p>
      <p class="mb-6">Or sent us an email on: <a href="mailto:casamartina19@yahoo.com">casamartina19@yahoo.com</a></p>
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2892.006017811627!2d11.026669576847546!3d43.5439164594911!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x132a3f74c4e7c7a1%3A0x465c12281372187d!2sVia%20della%20Costituente%2C%2029%2C%2050050%20Badia%20A%20Cerreto%20FI%2C%20Italy!5e0!3m2!1sen!2suk!4v1708110465020!5m2!1sen!2suk"
        width="800"
        height="600"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"></iframe>
    </section>
  </main>
</Layout>
