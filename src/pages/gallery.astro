---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import welcome from "../images/casa-martina-6.jpg";
import balcony1 from "../images/casa-martina-34.jpg";
import balcony2 from "../images/casa-martina-44.jpg";
import balcony3 from "../images/casa-martina-41.jpg";
import balcony4 from "../images/casa-martina-11.jpg";
import balcony5 from "../images/casa-martina-36.jpg";
import bathroom1 from "../images/casa-martina-21.jpg";
import bathroom2 from "../images/casa-martina-33.jpg";
import bathroom3 from "../images/casa-martina-38.jpg";
import bathroom4 from "../images/casa-martina-37.jpg";
import bathroom5 from "../images/casa-martina-17.jpg";
import bedroomOne1 from "../images/casa-martina-32.jpg";
import bedroomOne2 from "../images/casa-martina-22.jpg";
