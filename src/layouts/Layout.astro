---
interface Props {
  title: string;
  description?: string;
  image?: string;
}

const { title, description = "Your perfect holiday home in Casa Martina Tuscany", image } = Astro.props;

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-D8X7024V6T"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-D8X7024V6T');
    </script>

    <meta charset="UTF-8" />
    <!-- Site meta tags -->
    <title>{title} - Casa Martina</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="og:image" content={image} />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://casamartinatuscany.com/">
    <meta property="og:type" content="website">
    <meta property="og:title" content={`${title} - Casa Martina`}>
    <meta property="og:description" content={description}>
    <meta property="og:image" content="/og-image.jpg">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="casamartinatuscany.com">
    <meta property="twitter:url" content="https://casamartinatuscany.com/">
    <meta name="twitter:title" content={`${title} - Casa Martina`}>
    <meta name="twitter:description" content={description}>
    <meta name="twitter:image" content="/og-image.jpg">
  </head>
  <body class="min-h-screen">
    <Header />
    <slot />
    <Footer />
    <script is:inline src="/preline.js"></script>
  </body>
</html>
